@using Microsoft.AspNetCore.Html
@using ZBlog.Params
@model ZBlog.Utils.PaginatedList<ZBlog.Model.Article> 
@{
    ViewData["Title"] = "Home Page";
}

<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <h1 class="my-4">
                ZBlog
                <small>--zblog</small>
            </h1>

            @foreach (var modelArticle in Model)
            {
                <!-- Blog Post -->
                <div class="card mb-4">
                    @* <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap"> *@
                    <div class="card-body">
                        <h2 class="card-title">@modelArticle.Title</h2>
                        <p class="card-text">@(new HtmlString(modelArticle.Context)) </p>
                        <a asp-action="@modelArticle.Slug" asp-controller="Post" class="btn btn-primary">更多 &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on @modelArticle.UpdatedAt.ToLongDateString() by
                        <span >ZBlog</span>
                    </div>
                </div>
            }
            <!-- Pagination -->
            <ul class="pagination justify-content-center mb-4">
                <li class="page-item   @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-controller="Home"
                       asp-action="Index"
                       asp-route-page="@(Model.PageIndex - 1)">
                        &larr; 上一页
                    </a>
                </li>
                @* @(Model.HasNextPage ? "" : "disabled") *@
                <li class="page-item   @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-controller="Home"
                       asp-action="Index"
                       asp-route-page="@(Model.PageIndex + 1)">
                        @* asp-route-page="@Model.PageIndex+1"> *@
                        下一页 &rarr;
                    </a>
                </li>
            </ul>
        </div>
        @await Html.PartialAsync("_Sidebar")
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->