@using ZBlog.Data
@inject ZBlogContext _context
@{
  var tags = _context.Tags.ToList();
}
<!-- Categories Widget -->
<div class="card my-4">
  <h5 class="card-header">标签</h5>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-6">
        <ul class="list-unstyled mb-0">
          @foreach (var category in tags.Where(category => tags.IndexOf(category) % 2 == 0))
          {
            <li>
              <a href="/tag/list/@(category.Slug)" >@category.Name</a>
            </li>
          }
        </ul>
      </div>
      <div class="col-lg-6">
        <ul class="list-unstyled mb-0">
          @foreach (var category in tags.Where(category => tags.IndexOf(category) % 2 == 1))
          {
            <li>
              <a href="/tag/list/@(category.Slug)" >@category.Name</a>
            </li>
          }
        </ul>
      </div>
    </div>
  </div>
</div>